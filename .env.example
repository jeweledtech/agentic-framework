# JeweledTech Agentic Framework Configuration
# Copy this file to .env and update the values

# === LLM Configuration ===
# Ollama server configuration
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3.2:latest

# Alternative: Use a different model
# OLLAMA_MODEL=mixtral:latest
# OLLAMA_MODEL=gemma:7b

# === API Server Configuration ===
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# === Agent Configuration ===
# Maximum execution time for agent tasks (in seconds)
AGENT_TIMEOUT=300

# Agent verbosity level (DEBUG, INFO, WARNING, ERROR)
AGENT_LOG_LEVEL=INFO

# === Knowledge Base Configuration ===
# Path to knowledge base directory
KNOWLEDGE_BASE_PATH=/app/knowledge_bases/examples

# Enable knowledge base caching
ENABLE_KB_CACHE=true

# === Tool Configuration ===
# Web search configuration (optional)
# SERPAPI_KEY=your_serpapi_key_here
# SEARCH_ENGINE=google

# File operation restrictions
FILE_OPERATIONS_ENABLED=true
FILE_OPERATIONS_BASE_PATH=/app/workspace

# === Security Configuration ===
# API authentication (optional in development)
# API_KEY=your_secure_api_key_here
# ENABLE_AUTH=false

# === Development Configuration ===
# Enable debug mode
DEBUG_MODE=false

# Enable hot reload
RELOAD_ON_CHANGE=true

# === Docker Configuration ===
# Container names (used by docker-compose)
CONTAINER_NAME_API=agentic-framework-api
CONTAINER_NAME_OLLAMA=agentic-framework-ollama

# === Monitoring Configuration (Optional) ===
# Enable metrics collection
ENABLE_METRICS=false
# METRICS_PORT=9090

# === Advanced Configuration ===
# LLM parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TOP_P=0.9

# Agent crew configuration
MAX_CREW_SIZE=5
CREW_COLLABORATION_MODE=sequential

# === n8n Integration Configuration ===
# n8n Cloud Instance
N8N_HOST=https://your-instance.app.n8n.cloud

# n8n Instance-level MCP Server (native - no separate container needed)
# Find these in n8n Settings > Instance-level MCP
N8N_MCP_SERVER_URI=https://your-instance.app.n8n.cloud/mcp-server/http
N8N_MCP_TOKEN=your_jwt_token_from_n8n_mcp_settings

# Available n8n MCP tools:
#   - search_workflows: Find workflows by name/description
#   - get_workflow_details: Get workflow input schema
#   - execute_workflow: Run a workflow by ID

# Framework API Key (for n8n â†’ Framework authentication)
# Generate with: openssl rand -hex 32
FRAMEWORK_API_KEY=generate_secure_key_here
ENABLE_AUTH=true

